<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/card_radius_small"
    card_view:cardElevation="@dimen/card_elevation">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_job_no"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Job Number"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_job_no"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/lbl_job_no"
            android:hint="123"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_company_name"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/btn_accept"
            android:text="Company Name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/btn_accept"
            android:layout_toRightOf="@+id/lbl_company_name"
            android:hint="MinTheinwin-Company"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lbl_address"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/lbl_company_name"
            android:text="Address"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_company_name"
            android:layout_toRightOf="@+id/lbl_address"
            android:text="Address"
            android:paddingBottom="@dimen/margin_medium"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_job_no"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-24dp"
            android:layout_marginRight="-1dp"
            android:theme="@style/AcceptViewButton"
            android:clickable="true"
            android:textSize="12sp"
            android:text="Accept" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
